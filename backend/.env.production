# Server Configuration
NODE_ENV=production
PORT=5000

# Database - Update with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/swipe-interview

# Security - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-complex

# CORS Configuration - Update with your actual domain
FRONTEND_URL=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Body Parser Limits
BODY_PARSER_LIMIT=10mb

# Frontend Build Path (for single-server deployment)
FRONTEND_BUILD_PATH=/var/www/html